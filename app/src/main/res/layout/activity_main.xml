<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/footer"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/button_lastEarthquakes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/footer_selector"
            android:contentDescription="@string/footer_last_earthquakes"
            app:srcCompat="@drawable/ic_home_grey_300_48dp"/>

        <ImageButton
            android:id="@+id/button_ImportantEarthquakes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/footer_selector"
            android:contentDescription="@string/footer_important_earthquakes"
            app:srcCompat="@drawable/ic_reorder_grey_300_48dp" />
    </LinearLayout>

</RelativeLayout>
